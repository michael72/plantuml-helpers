{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true /* enable all strict type-checking options */,
    /* Additional Checks */
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true /* Report error when not all code paths in function return a value. */,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */,
    "noUnusedParameters": true /* Report errors on unused parameters. */,
    "noUnusedLocals": true,
    "exactOptionalPropertyTypes": true, // New strict option
    "noImplicitOverride": true, // New strict option
    "noPropertyAccessFromIndexSignature": true, // New strict option
    "noUncheckedIndexedAccess": true // New strict option for better array/object safety
  },
  "rules": {
    "@typescript-eslint/member-naming": [
      "error",
      {
        "private": "^__",
        "protected": "^_"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test", "test/**/*.spec.ts"]
}